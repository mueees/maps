@charset "utf-8";

@import "../import/variables.styl"
@import "../import/mixins.styl"
@import "../import/rewrite.styl"

body
    color mainColor

#notice-container
    position fixed
    width 200px
    min-height 12px
    top 5px
    right 5px

.notice
    width 200px
    font-size 12px
    background rgba(0, 0, 0, 0.5)
    padding 10px
    min-height 50px
    margin 0 0 3px
    color white

    .body
        padding 0 20px 0 0

    &.error
        border-left 6px solid red
    &.success
        border-left 6px solid #3ABE3A

.intro-container
    padding 10px
    background rgba(0,0,0,0.4)
    color white
    position fixed
    top 120px
    margin 0 0 0 30%
    width 40%

    h2
        font-size 18px

    .account
        overflow hidden

    .signin-container,
    .signup-container
        width 44%
        margin 0 3% 0 3%
        float left

    .make-container
        margin 15px 3% 0 3%
        button
            width 100%
            margin 10px 0 0 0
            height 60px